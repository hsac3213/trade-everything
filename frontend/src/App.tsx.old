import React, { useState } from 'react';
import SimpleChart from './CandleChart';

// --- 타입 정의 ---

// 호가창 데이터 행
interface Order {
  price: number;
  size: number;
}

// 호가창 행 컴포넌트 Props
interface OrderBookRowProps {
  price: number;
  size: number;
  type: 'ask' | 'bid';
}

// --- 호가창 컴포넌트 ---
const OrderBook: React.FC = () => {
  // 간단한 목(mock) 데이터
  const asks: Order[] = [
    { price: 60100, size: 0.52 },
    { price: 60050, size: 1.18 },
    { price: 60000, size: 2.30 },
  ].sort((a, b) => b.price - a.price); // 매도는 가격 높은 순으로 정렬

  const bids: Order[] = [
    { price: 59950, size: 0.88 },
    { price: 59900, size: 1.50 },
    { price: 59850, size: 3.12 },
  ].sort((a, b) => b.price - a.price); // 매수는 가격 높은 순으로 정렬

  const OrderBookRow: React.FC<OrderBookRowProps> = ({ price, size, type }) => {
    const isAsk = type === 'ask';
    const textColor = isAsk ? 'text-red-500' : 'text-green-500';
    const barColor = isAsk ? 'bg-red-900/50' : 'bg-green-900/50';
    
    // 임의의 백분율로 바 너비 설정 (시각적 효과)
    const barWidth = Math.min(size * 20, 100); 

    return (
      <div className={`relative flex justify-between items-center p-1.5 text-sm rounded-md overflow-hidden hover:bg-gray-700 transition-colors`}>
        {/* 시각적 깊이 바 */}
        <div 
          className={`absolute top-0 bottom-0 ${isAsk ? 'right-0' : 'left-0'} ${barColor} z-0`}
          style={{ width: `${barWidth}%` }}
        ></div>
        
        {/* 텍스트 컨텐츠 */}
        <span className={`z-10 font-mono ${textColor}`}>{price.toLocaleString()}</span>
        <span className="z-10 font-mono">{size.toFixed(2)}</span>
      </div>
    );
  };

  return (
    <div className="bg-gray-800 p-4 rounded-lg shadow-lg h-[400px] flex flex-col">
      <h3 className="text-lg font-semibold mb-3 text-center text-gray-200">호가창</h3>
      <div className="grid grid-cols-2 gap-4 mb-2 text-xs text-gray-400">
        <span>가격 (KRW)</span>
        <span className="text-right">수량 (BTC)</span>
      </div>
      
      {/* 매도 (Asks) */}
      <div className="flex-1 flex flex-col justify-end overflow-hidden">
        {asks.map((ask) => (
          <OrderBookRow key={ask.price} price={ask.price} size={ask.size} type="ask" />
        ))}
      </div>

      {/* 현재가 (임시) */}
      <div className="py-2 my-2 border-y border-gray-600">
        <span className="text-xl font-bold text-white flex justify-center">
          60,000
        </span>
      </div>
      
      {/* 매수 (Bids) */}
      <div className="flex-1 overflow-hidden">
        {bids.map((bid) => (
          <OrderBookRow key={bid.price} price={bid.price} size={bid.size} type="bid" />
        ))}
      </div>
    </div>
  );
};

// --- 차트 플레이스홀더 ---
const ChartPlaceholder: React.FC = () => {
  return (
    <div className="w-full h-[500px] lg:h-auto lg:flex-1 bg-gray-800 rounded-lg shadow-lg flex items-center justify-center">
      <SimpleChart></SimpleChart>
    </div>
  );
};

// --- 매수/매도 컨트롤 ---
const TradeControls: React.FC = () => {
  const [amount, setAmount] = useState<string>('');
  const [price, setPrice] = useState<string>('');

  const handlePriceChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    setPrice(e.target.value);
  };

  const handleAmountChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    setAmount(e.target.value);
  };

  return (
    <div className="bg-gray-800 p-4 rounded-lg shadow-lg mt-4 lg:mt-0">
      <h3 className="text-lg font-semibold mb-4 text-center text-gray-200">주문</h3>
      <div className="space-y-4">
        <div>
          <label htmlFor="price" className="block text-sm font-medium text-gray-400 mb-1">
            주문 가격 (KRW)
          </label>
          <input
            type="number"
            id="price"
            value={price}
            onChange={handlePriceChange}
            className="w-full p-2 rounded-md bg-gray-700 border border-gray-600 text-white font-mono focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="0"
          />
        </div>
        <div>
          <label htmlFor="amount" className="block text-sm font-medium text-gray-400 mb-1">
            주문 수량 (BTC)
          </label>
          <input
            type="number"
            id="amount"
            value={amount}
            onChange={handleAmountChange}
            className="w-full p-2 rounded-md bg-gray-700 border border-gray-600 text-white font-mono focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="0.0000"
          />
        </div>
        
        {/* 총 주문 금액 (간단 계산) */}
        <div className="text-center text-gray-400 text-sm">
          <p>총 주문 금액</p>
          <p className="text-lg text-white font-mono">
            {((Number(price) || 0) * (Number(amount) || 0)).toLocaleString(undefined, { maximumFractionDigits: 0 })} KRW
          </p>
        </div>

        <div className="flex gap-4">
          <button className="w-full py-3 rounded-md bg-green-600 hover:bg-green-700 text-white font-bold text-lg transition-colors duration-200">
            매수
          </button>
          <button className="w-full py-3 rounded-md bg-red-600 hover:bg-red-700 text-white font-bold text-lg transition-colors duration-200">
            매도
          </button>
        </div>
      </div>
    </div>
  );
};

// --- 메인 앱 컴포넌트 ---
const App: React.FC = () => {
  return (
    <div className="min-h-screen bg-gray-900 text-white p-4 lg:p-8 font-sans">
      <header className="mb-6">
        <h1 className="text-3xl font-bold text-center text-gray-100">
          React Trading UI
        </h1>
        <p className="text-center text-gray-400">BTC / KRW</p>
      </header>

      {/* 메인 레이아웃 */}
      <div className="flex flex-col lg:flex-row gap-6 max-w-7xl mx-auto">
        
        {/* 왼쪽: 호가창 */}
        <aside className="w-full lg:w-1/4">
          <OrderBook />
        </aside>

        {/* 중앙: 차트 */}
        <main className="w-full lg:w-1/2 flex">
          <ChartPlaceholder />
        </main>

        {/* 오른쪽: 주문 */}
        <aside className="w-full lg:w-1/4">
          <TradeControls />
        </aside>

      </div>
    </div>
  );
}

export default App;
